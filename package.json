{
	"name": "earthquake-monorepo",
	"version": "0.1.0",
	"private": true,
	"packageManager": "pnpm@10.18.2",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"start": "turbo run start",
		"lint": "turbo run lint",
		"typecheck": "turbo run tsc:check",
		"format": "biome format --write .",
		"check": "biome ci .",
		"biome:check": "biome ci .",
		"test": "turbo run test",
		"test:watch": "turbo run test:watch",
		"test:ui": "turbo run test:ui",
		"coverage": "turbo run coverage",
		"clean": "turbo run clean && rm -rf node_modules",
		"local:up": "docker compose --profile localstack up -d",
		"local:down": "docker compose --profile localstack down",
		"infra:bootstrap": "cd apps/infra && cdklocal bootstrap",
		"infra:deploy": "cd apps/infra && cdklocal deploy --all --require-approval never",
		"infra:diff": "cd apps/infra && cdklocal diff",
		"infra:destroy": "cd apps/infra && cdklocal destroy --all --force",
		"infra:synth": "cd apps/infra && cdklocal synth"
	},
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@tailwindcss/postcss": "^4",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@vitejs/plugin-react": "^5.0.4",
		"@vitest/coverage-v8": "^1.6.0",
		"jsdom": "^27.0.0",
		"tailwindcss": "^4",
		"turbo": "^2.3.3",
		"typescript": "^5",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^1.6.0"
	}
}
